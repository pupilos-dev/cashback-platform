<%= render "pages/menu" %>

</br>

<button class="btn btn-md btn-success">
  <%= link_to 'New Offer', new_offer_path %>
</button>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th>Advertiser Name</th>
      <th>URL</th>
      <th>Description</th>
      <th>Starts at</th>
      <th>Ends at</th>
      <th>Premium</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.advertiser_name %></td>
        <td><%= offer.url %></td>
        <td><%= offer.description %></td>
        <td><%= offer.starts_at %></td>
        <td><%= offer.ends_at %></td>
        <td><%= offer.premium %></td>
        <td>
          <%= form_for offer, method: :put do |f| %>
            <%= f.hidden_field :enabled, value: !offer.enabled %>
            <%= f.submit offer.enabled ? 'disable' : 'enable' %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <td><%= link_to 'Destroy', offer,
          method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

