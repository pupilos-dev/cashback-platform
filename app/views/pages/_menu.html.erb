<div class="menu">
  <a href=<%= root_path %>><h1>Cashback Platform</h1></a>

  <div class="sign">
    <% if current_member.present? && current_member.admin? %>
      <button class="btn btn-primary">
        <%= link_to 'Create Offers', offers_path %>
      </button>
    <% end %>
    <% if current_member %>
      <button class="btn btn-danger">
        <%= link_to 'Sign out', destroy_member_session_path, method: :delete %>
      </button>
    <% else %>
      <button class="btn btn-primary">
        <%= link_to 'Sign up', new_member_registration_path %>
      </button>
      <button class="btn btn-success">
        <%= link_to 'Sign in', new_member_session_path %>
      </button>
    <% end %>
  </div>
</div>


